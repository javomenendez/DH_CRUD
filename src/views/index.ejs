<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% let disc = 0 %>
			<% for(let i=0; i<productosVisitados.length; i++) {%>
			<% disc=productosVisitados[i].discount>0?productosVisitados[i].price-(productosVisitados[i].price*(productosVisitados[i].discount/100)):productosVisitados[i].price %>	
			<div class="col-12 col-sm-6 col-lg-3">				
				<section class="product-box">					
					<a href="/products/detail/<%= productosVisitados[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productosVisitados[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%= disc %></h2>
							<span><%= productosVisitados[i].discount %> % OFF</span>
							<p><%= productosVisitados[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
					
				</section>
				
			</div>
			<%}%>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% for(let i=0; i<productosEnOferta.length; i++) {%>
			<% disc=productosEnOferta[i].discount>0?productosEnOferta[i].price-(productosEnOferta[i].price*(productosEnOferta[i].discount/100)):productosEnOferta[i].price %>	

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= productosEnOferta[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productosEnOferta[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%= disc %></h2>
							<span><%= productosEnOferta[i].discount %> % OFF</span>
							<p><%= productosEnOferta[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>